{
  "root": "./docs",
  "title": "nio documentation",
  "description": "Design complex systems with the simple building blocks of nio.",
  "variables": {
    "company": "nio",
    "product": "nio"
  },
  "plugins": [
    "theme-nio@git://github.com/nioinnovation/gitbook-plugin-theme-nio.git",
    "-sharing",
    "favicon",
    "toolbar",
    "video@git://github.com/xgrommx/gitbook-plugin-video"
  ],
  "pluginsConfig": {
    "favicon":{
        "shortcut": "img/favicon.ico",
        "bookmark": "img/favicon.ico"
    },
    "toolbar": {
      "buttons":[
        {
            "label": "Share on Twitter",
            "icon": "fa fa-twitter fa-inverse circle-background",
            "url": "http://twitter.com/home?status={{title}}%20{{url}}"
        },
        {
            "label": "Search page title on StackOverflow",
            "icon": "fa fa-stack-overflow fa-inverse circle-background",
            "url": "http://stackoverflow.com/search?q=nio"
        },
        {
            "label": "GitHub",
            "icon": "fa fa-github fa-inverse circle-background",
            "url": "http://github.com/nioinnovation"
        }
      ]
    }
  }
}
