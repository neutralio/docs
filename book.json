{
  "root": "./docs",
  "title": "nio documentation",
  "description": "Design complex systems with the simple building blocks of nio.",
  "variables": {
    "company": "nio",
    "product": "nio"
  },
  "plugins": [
    "theme-nio@git://github.com/nioinnovation/gitbook-plugin-theme-nio.git",
    "favicon",
    "-sharing",
    "toolbar",
    "back-to-top-button",
    "alerts"
  ],
  "pluginsConfig": {
    "favicon":{
        "shortcut": "img/favicon.ico",
        "bookmark": "img/favicon.ico"
    },
    "theme-nio": {
      "active-location": "docs"
    },
    "toolbar": {
      "buttons":[
        {
            "label": "GitHub",
            "icon": "fa fa-github fa-inverse circle-background",
            "url": "http://github.com/nioinnovation"
        }
      ]
    }
  }
}
